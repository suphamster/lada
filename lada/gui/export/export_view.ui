<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <requires lib="gtk" version="4.0"/>
    <requires lib="Adw" version="1.0"/>

    <template class="ExportView" parent="GtkWidget">
        <property name="layout-manager">
            <object class="GtkBinLayout"/>
        </property>
        <child>
            <object class="AdwToolbarView">
                <child type="top">
                    <object class="AdwHeaderBar">
                        <property name="title-widget">
                            <object class="AdwViewSwitcher" id="view_switcher">
                                <property name="policy">1</property>
                                <property name="stack" bind-source="ExportView" bind-property="view-stack"/>
                            </object>
                        </property>
                        <child type="start">
                            <object class="GtkToggleButton" id="toggle_button_pane">
                                <property name="icon-name">sliders-horizontal-symbolic</property>
                                <property name="active">False</property>
                            </object>
                        </child>
                        <child type="end">
                            <object class="GtkMenuButton">
                                <property name="primary">True</property>
                                <property name="icon-name">open-menu-symbolic</property>
                                <property name="tooltip-text" translatable="true">Settings</property>
                                <property name="menu-model">primary_menu</property>
                            </object>
                        </child>
                        <child type="end">
                            <object class="GtkButton" id="button_add_files">
                                <property name="icon-name">plus-large-symbolic</property>
                                <property name="tooltip-text" translatable="true">Add Files…</property>
                                <signal name="clicked" handler="button_add_files_callback"/>
                            </object>
                        </child>
                        <child type="end">
                            <object class="GtkButton" id="button_start_export">
                                <property name="label" translatable="true">Restore</property>
                                <property name="visible">False</property>
                                <signal name="clicked" handler="button_start_export_callback"/>
                                <style>
                                    <class name="suggested-action"/>
                                </style>
                            </object>
                        </child>
                    </object>
                </child>

                <property name="content">

                    <object class="AdwOverlaySplitView">
                        <property name="show-sidebar"
                                  bind-source="toggle_button_pane"
                                  bind-property="active"
                                  bind-flags="sync-create|bidirectional"/>
                        <property name="sidebar-width-fraction">0.5</property>
                        <property name="max-sidebar-width">500.0</property>
                        <property name="sidebar">
                            <object class="ConfigSidebar" id="config_sidebar">
                                <property name="config" bind-source="ExportView" bind-property="config"/>
                                <property name="show-playback-section">False</property>
                            </object>
                        </property>
                        <property name="content">
                            <object class="GtkBox">
                                <property name="orientation">vertical</property>
                                <child>
                                    <object class="NoGpuBanner" id="banner_no_gpu">
                                        <property name="config" bind-source="ExportView" bind-property="config"/>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkStack" id="stack">
                                        <property name="transition-type">none</property>
                                        <child>
                                            <object class="GtkStackPage">
                                                <property name="name">multiple-files</property>
                                                <property name="child">
                                                    <object class="GtkScrolledWindow">
                                                        <property name="vexpand">True</property>
                                                        <child>
                                                            <object class="GtkBox">
                                                                <property name="orientation">1</property>
                                                                <child>
                                                                    <object class="GtkListBox" id="list_box">
                                                                        <property name="hexpand">true</property>
                                                                        <property name="valign">1</property>
                                                                        <property name="margin-start">18</property>
                                                                        <property name="margin-end">18</property>
                                                                        <property name="margin-top">12</property>
                                                                        <property name="margin-bottom">12</property>
                                                                        <property name="selection-mode">0</property>
                                                                        <style>
                                                                            <class name="boxed-list"/>
                                                                        </style>
                                                                    </object>
                                                                </child>
                                                            </object>
                                                        </child>
                                                    </object>
                                                </property>
                                            </object>
                                        </child>
                                        <child>
                                            <object class="GtkStackPage">
                                                <property name="name">single-file</property>
                                                <property name="child">
                                                    <object class="AdwStatusPage" id="status_page">
                                                        <property name="title" translatable="true">Export video</property>
                                                        <property name="icon-name">arrow-pointing-away-from-line-right-symbolic</property>
                                                        <child>
                                                            <object class="GtkBox">
                                                                <property name="orientation">vertical</property>
                                                                <child>
                                                                    <object class="GtkBox">
                                                                        <property name="orientation">vertical</property>
                                                                        <property name="margin-bottom">20</property>
                                                                        <child>
                                                                            <object class="GtkLabel" id="label_file_name_status_page">
                                                                                <property name="visible">True</property>
                                                                                <property name="use-markup">True</property>
                                                                                <property name="single-line-mode">true</property>
                                                                                <property name="ellipsize">3</property>
                                                                                <property name="halign">center</property>
                                                                                <style>
                                                                                    <class name="title-4"/>
                                                                                </style>
                                                                            </object>
                                                                        </child>
                                                                        <child>
                                                                            <object class="GtkLabel" id="label_meta_data_status_page">
                                                                                <property name="visible">True</property>
                                                                                <property name="use-markup">True</property>
                                                                                <property name="single-line-mode">true</property>
                                                                                <property name="ellipsize">3</property>
                                                                                <property name="halign">center</property>
                                                                                <style>
                                                                                    <class name="dim-label"/>
                                                                                    <class name="caption"/>
                                                                                </style>
                                                                            </object>
                                                                        </child>
                                                                    </object>
                                                                </child>
                                                                <child>
                                                                    <object class="GtkProgressBar" id="progress_bar_file_export_status_page">
                                                                        <property name="visible">False</property>
                                                                        <property name="margin-start">20</property>
                                                                        <property name="margin-end">20</property>
                                                                    </object>
                                                                </child>
                                                                <child>
                                                                    <object class="GtkButton" id="button_start_export_status_page">
                                                                        <property name="label" translatable="true">Restore</property>
                                                                        <property name="visible">False</property>
                                                                        <signal name="clicked" handler="button_start_export_callback"/>
                                                                        <property name="halign">center</property>
                                                                        <style>
                                                                            <class name="suggested-action"/>
                                                                            <class name="pill"/>
                                                                        </style>
                                                                    </object>
                                                                </child>
                                                                <child>
                                                                    <object class="GtkButton" id="button_open_status_page">
                                                                        <property name="visible">false</property>
                                                                        <property name="halign">center</property>
                                                                        <property name="tooltip-text" translatable="true">Open in External Program…</property>
                                                                        <property name="child">
                                                                            <object class="AdwButtonContent">
                                                                                <property name="icon-name">external-link-symbolic</property>
                                                                                <property name="label" translatable="true">Open File</property>
                                                                            </object>
                                                                        </property>
                                                                        <style>
                                                                            <class name="pill"/>
                                                                        </style>
                                                                    </object>
                                                                </child>
                                                            </object>
                                                        </child>
                                                    </object>
                                                </property>
                                            </object>
                                        </child>
                                        <property name="visible-child-name">multiple-files</property>
                                    </object>
                                </child>
                            </object>
                        </property>
                    </object>
                </property>
            </object>
        </child>
    </template>

    <menu id="primary_menu">
        <section>
            <item>
                <attribute name="label">Keyboard Shortcuts</attribute>
                <attribute name="action">app.shortcuts</attribute>
            </item>
            <item>
                <attribute name="label">About Lada</attribute>
                <attribute name="action">app.about</attribute>
            </item>
        </section>
    </menu>
</interface>
