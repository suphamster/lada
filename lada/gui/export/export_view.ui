<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <requires lib="gtk" version="4.0"/>
    <requires lib="Adw" version="1.0"/>

    <template class="ExportView" parent="GtkWidget">
        <property name="layout-manager">
            <object class="GtkBinLayout"/>
        </property>
        <child>
            <object class="AdwToolbarView">
                <child type="top">
                    <object class="AdwHeaderBar">
                        <property name="title-widget">
                            <object class="AdwViewSwitcher" id="view_switcher">
                                <property name="policy">1</property>
                                <property name="stack" bind-source="ExportView" bind-property="view-stack"/>
                            </object>
                        </property>
                        <child type="start">
                            <object class="GtkToggleButton" id="toggle_button_pane">
                                <property name="icon-name">sliders-horizontal-symbolic</property>
                                <property name="active">False</property>
                            </object>
                        </child>
                        <child type="end">
                            <object class="GtkMenuButton">
                                <property name="primary">True</property>
                                <property name="icon-name">open-menu-symbolic</property>
                                <property name="tooltip-text" translatable="true">Settings</property>
                                <property name="menu-model">primary_menu</property>
                            </object>
                        </child>
                        <child type="end">
                            <object class="GtkButton" id="button_add_files">
                                <property name="icon-name">plus-large-symbolic</property>
                                <property name="tooltip-text" translatable="true">Add Filesâ€¦</property>
                                <signal name="clicked" handler="button_add_files_callback"/>
                            </object>
                        </child>
                        <child type="end">
                            <object class="GtkButton" id="button_cancel_export">
                                <property name="label" translatable="true">Cancel</property>
                                <property name="visible">False</property>
                                <signal name="clicked" handler="on_button_cancel_export_clicked"/>
                              <style>
                                    <class name="destructive-action"/>
                                </style>
                            </object>
                        </child>
                        <child type="end">
                            <object class="GtkButton" id="button_pause_export">
                                <property name="label" translatable="true">Pause</property>
                                <property name="visible">False</property>
                                <signal name="clicked" handler="on_button_pause_export_clicked"/>
                            </object>
                        </child>
                        <child type="end">
                            <object class="GtkButton" id="button_resume_export">
                                <property name="label" translatable="true">Resume</property>
                                <property name="visible">False</property>
                                <signal name="clicked" handler="on_button_resume_export_clicked"/>
                            </object>
                        </child>
                        <child type="end">
                            <object class="GtkButton" id="button_start_export">
                                <property name="label" translatable="true">Restore</property>
                                <property name="visible">False</property>
                                <signal name="clicked" handler="on_button_start_export_clicked"/>
                                <style>
                                    <class name="suggested-action"/>
                                </style>
                            </object>
                        </child>
                    </object>
                </child>

                <property name="content">

                    <object class="AdwOverlaySplitView">
                        <property name="show-sidebar"
                                  bind-source="toggle_button_pane"
                                  bind-property="active"
                                  bind-flags="sync-create|bidirectional"/>
                        <property name="sidebar-width-fraction">0.5</property>
                        <property name="max-sidebar-width">500.0</property>
                        <property name="sidebar">
                            <object class="ConfigSidebar" id="config_sidebar">
                                <property name="config" bind-source="ExportView" bind-property="config"/>
                                <property name="show-playback-section">False</property>
                            </object>
                        </property>
                        <property name="content">
                            <object class="GtkBox">
                                <property name="orientation">vertical</property>
                                <child>
                                    <object class="NoGpuBanner" id="banner_no_gpu">
                                        <property name="config" bind-source="ExportView" bind-property="config"/>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkStack" id="stack">
                                        <property name="transition-type">none</property>
                                        <child>
                                            <object class="GtkStackPage">
                                                <property name="name">multiple-files</property>
                                                <property name="child">
                                                    <object class="ExportMultipleFilesPage" id="multiple_files_page"/>
                                                </property>
                                            </object>
                                        </child>
                                        <child>
                                            <object class="GtkStackPage">
                                                <property name="name">single-file</property>
                                                <property name="child">
                                                    <object class="ExportSingleFileStatusPage" id="status_page"/>
                                                </property>
                                            </object>
                                        </child>
                                        <property name="visible-child-name">multiple-files</property>
                                    </object>
                                </child>
                            </object>
                        </property>
                    </object>
                </property>
            </object>
        </child>
    </template>

    <menu id="primary_menu">
        <section>
            <item>
                <attribute name="label" translatable="true">Keyboard Shortcuts</attribute>
                <attribute name="action">app.shortcuts</attribute>
            </item>
            <item>
                <attribute name="label" translatable="true">About Lada</attribute>
                <attribute name="action">app.about</attribute>
            </item>
        </section>
    </menu>
</interface>
